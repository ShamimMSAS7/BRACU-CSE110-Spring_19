import java.util.Scanner;
public class L6P12{
  public static void main(String[]args){
    Scanner sc=new Scanner(System.in);
    System.out.println("Enter the number");
    int num=sc.nextInt();
    int c=1;
    int star, space;
    
    while(c<=num*2-1){
      if(c<=num){
        star=2*c-1;
        space=num-c;
      }else{
        star=(2*num-c)*2-1;
        space=c-num;
      }
      int j=1;
      while(j<=space){
        System.out.print(" ");
        j++;
      }
      int i=1;
      while(i<=star){
        System.out.print("*");
        i++;
      }
      j=1;
      while(j<space){
        System.out.print(" ");
        j++;
      }
      if(c==num){
        System.out.println("");
      } else{
        System.out.println(" ");
      }
      c++;
    }
    sc.close();
  }
}