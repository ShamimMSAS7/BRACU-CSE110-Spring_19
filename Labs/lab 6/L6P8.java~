import java.util.Scanner;
public class L6P8{
  public static void main(String[]args){
    Scanner sc=new Scanner(System.in);
    System.out.println("Enter the number of row");
    int row=sc.nextInt();
    
    int c=1;
    while(c<=row){
      int i=1;
      while(i<=row-c){
        System.out.print(" ");
        i++;
      }
      int j=1;
      while(j<c){
        System.out.print(j);
        j++;
      }
      System.out.println(j);
    c++;
    }
    sc.close();
  }
  
}  
